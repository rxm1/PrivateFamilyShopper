<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">22sp</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:editTextBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="EditText" parent="BaseAppTheme">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:padding">6dp</item>
    </style>

    <!-- Gray styles -->
    <style name="AppThemeGray" parent="BaseAppTheme">
        <item name="colorPrimary">@color/primaryGray</item>
        <item name="colorAccent">@color/primaryAccentGray</item>
        <item name="android:windowBackground">@color/primaryListBackgroundGray</item>
        <item name="android:colorBackground">@color/primaryListBackgroundGray</item>

    </style>
    <style name="DialogThemeGray" parent="AppThemeGray">
        <item name="android:bottomBright">@color/primaryListBackgroundGray</item>
        <item name="android:topDark">@color/primaryGray</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/windowTitleStyleGray</item>
    </style>
    <style name="windowTitleStyleGray">
        <item name="android:background">@color/primaryGray</item>
    </style>
    <style name="mainListBackgroundGray" parent="AppThemeGray">
        <item name="android:background">@color/primaryListBackgroundGray</item>
    </style>
    <style name="ListItemThemeGray" parent="AppThemeGray">
        <item name="android:background">@color/primaryListBackgroundGray</item>
        <item name="android:fadeScrollbars">false</item>
    </style>
    <style name="ToolbarTheme.Gray" parent="AppThemeGray">
        <item name="android:background">@color/primaryGray</item>
    </style>

    <!-- Red styles -->
    <style name="AppThemeRed" parent="BaseAppTheme">
        <item name="colorPrimary">@color/primaryRed</item>
        <item name="colorAccent">@color/primaryAccentRed</item>
        <item name="android:windowBackground">@color/primaryListBackgroundRed</item>
        <item name="android:colorBackground">@color/primaryListBackgroundRed</item>

    </style>
    <style name="DialogThemeRed" parent="AppThemeRed">
        <item name="android:topDark">@color/primaryRed</item>
        <item name="android:bottomBright">@color/primaryListBackgroundRed</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/windowTitleStyleRed</item>
    </style>
    <style name="windowTitleStyleRed">
        <item name="android:background">@color/primaryRed</item>
    </style>
    <style name="mainListBackgroundRed" parent="AppThemeRed">
        <item name="android:background">@color/primaryListBackgroundRed</item>
    </style>
    <style name="ListItemThemeRed" parent="AppThemeRed">
        <item name="android:background">@color/primaryListBackgroundRed</item>
        <item name="android:fadeScrollbars">false</item>
    </style>
    <style name="ToolbarTheme.Red" parent="AppThemeRed">
        <item name="android:background">@color/primaryRed</item>
    </style>

    <!-- Blue styles -->
    <style name="AppThemeBlue" parent="BaseAppTheme">
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorAccent">@color/primaryAccentBlue</item>
        <item name="android:windowBackground">@color/primaryListBackgroundBlue</item>
        <item name="android:popupBackground">@color/primaryListBackgroundBlue</item>
        <item name="android:colorBackground">@color/primaryListBackgroundBlue</item>
    </style>
    <style name="DialogThemeBlue" parent="AppThemeBlue">
        <item name="android:bottomBright">@color/primaryListBackgroundBlue</item>
        <item name="android:topDark">@color/primaryBlue</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/windowTitleStyleBlue</item>
    </style>
    <style name="windowTitleStyleBlue">
        <item name="android:background">@color/primaryBlue</item>
    </style>
    <style name="mainListBackgroundBlue" parent="AppThemeBlue">
        <item name="android:background">@color/primaryListBackgroundBlue</item>
    </style>
    <style name="ListItemThemeBlue" parent="AppThemeBlue">
        <item name="android:background">@color/primaryListBackgroundBlue</item>
        <item name="android:fadeScrollbars">false</item>
    </style>
    <style name="ToolbarTheme.Blue" parent="AppThemeBlue">
        <item name="android:background">@color/primaryBlue</item>
    </style>

</resources>
